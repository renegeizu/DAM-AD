<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout2"
    android:background="@drawable/carta_item_selector"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#d1b557"
        android:layout_weight="0.1"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/ivDetalleCarta"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/icono_carta" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#f0cf64"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvElementoDetalleCarta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="3dp"
            android:textSize="17dp"
            android:text="@string/tv_Elemento_Detalle_Carta"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/tvPrecioDetalleCarta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="@string/tv_Precio_Detalle_Carta" />

    </LinearLayout>

</LinearLayout>
