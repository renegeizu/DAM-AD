<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout2"
    android:background="#4079cd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tvNombreDetallePedido"
        android:layout_width="155dp"
        android:layout_height="56dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="7dp"
        android:gravity="center_vertical"
        android:text="@string/tv_Nombre_Detalle_Pedido" />

    <ImageButton
        android:id="@+id/ibSumarDetallePedido"
        android:background="@drawable/pedido_boton_sumar_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical"
        android:src="@android:drawable/ic_input_add" />

    <TextView
        android:id="@+id/tvCantidadDetallePedido"
        android:layout_width="50dp"
        android:layout_height="56dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/tv_Cantidad_Detalle_Pedido" />

    <ImageButton
        android:id="@+id/ibRestarDetallePedido"
        android:background="@drawable/pedido_boton_restar_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical"
        android:src="@android:drawable/ic_delete" />

</LinearLayout>